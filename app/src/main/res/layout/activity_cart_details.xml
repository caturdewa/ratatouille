<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

      <ImageView
          android:id="@+id/BackMenu"
          android:layout_width="18dp"
          android:layout_height="17dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ic_backbutton" />

      <TextView
          android:layout_width="40dp"
          android:layout_height="20dp"
          android:layout_marginStart="50dp"
          android:layout_gravity="top"
          android:text="Menu"
          android:textStyle="bold"/>

      <TextView
          android:layout_width="100dp"
          android:layout_height="20dp"
          android:layout_marginStart="50dp"
          android:layout_gravity="top"
          android:text="20 menus"
          android:textSize="10dp"
          />

      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="You're seeing the menu of"
              android:textSize="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp">

              <TextView
                  android:layout_width="160dp"
                  android:layout_height="30dp"
                  android:text = "HENSIN - THE WESTIN JAKARTA"
                  android:textSize="12dp"/>

            </LinearLayout>

          <ImageView
              android:id="@+id/FoodPicture"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:src="@drawable/verified_logo" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="40dp"
          android:layout_height="20dp"
          android:layout_marginBottom="20dp"
          android:layout_gravity="top"
          android:text="Menu"
          android:textStyle="bold"/>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="20dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/all_menu_image"
                  android:layout_width="86dp"
                  android:layout_height="95dp"/>

              <TextView
                  android:id="@+id/all_menu_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="Acevichado"/>

              <TextView
                  android:id="@+id/menu_price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="240dp"
                  android:layout_marginTop="40dp"
                  android:text="Rp199.000"/>

            </RelativeLayout>

          </LinearLayout>

      </androidx.cardview.widget.CardView>




    </LinearLayout>


  </LinearLayout>